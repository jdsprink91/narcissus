---
import "modern-normalize/modern-normalize.css";

interface Props {
  pageTitle: string;
}

const { pageTitle } = Astro.props;
---

<style is:global>
  p,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  ol,
  ul,
  figure {
    margin: 0;
  }

  img {
    max-width: 100%;
    height: 100%;
  }
</style>

<style>
  html {
    height: 100%;
  }

  body {
    height: 100%;
  }

  .page-container {
    margin-left: auto;
    margin-right: auto;
    border-left: 2px solid black;
    border-right: 2px solid black;

    min-height: 100%;
    max-width: 50rem;
  }

  @media (max-width: 786px) {
    .page-container {
      border-left: 0px;
      border-right: 0px;
      max-width: 100%;
    }
  }

  .title-container {
    padding-left: 2rem;
    padding-right: 2rem;
  }

  .title {
    font-size: 3rem;
    line-height: 1.5;
    text-align: center;
  }

  .subtitle {
    margin-top: 2rem;
  }

  nav {
    margin-top: 1.5rem;

    display: grid;
    grid-template-columns: repeat(3, 1fr);

    border-top: 2px solid black;
    border-bottom: 2px solid black;
  }

  nav > a {
    text-align: center;
    padding-top: 1rem;
    padding-bottom: 1rem;

    text-decoration: none;
    color: black;
  }

  nav > a:not(:last-child) {
    border-right: 2px solid black;
  }

  .content-container {
    padding-left: 1rem;
    padding-right: 1rem;
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }
</style>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
  </head>
  <body>
    <div class="page-container">
      <!-- replace this is an image, most likely -->
      <div class="title-container">
        <p class="title">Narcissus</p>
        <p class="subtitle">People writing about themselves for themselves.</p>
      </div>
      <nav>
        <a href="/">Home</a>
        <a href="/posts">Posts</a>
        <a href="/about">About</a>
      </nav>
      <div class="content-container">
        <slot />
      </div>
    </div>
  </body>
</html>
