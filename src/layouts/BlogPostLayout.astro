---
import BaseLayout from "../layouts/BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<!--
  1. max width of images and center them
  2. make captions for images italicized and centered
  3. Spacing for everything
  4. link styles
  5. still need to figure out fonts

-->
<style is:global>
  .blog-post {
    figure {
      max-width: 40rem;
      margin-left: auto;
      margin-right: auto;
    }

    @media (max-width: 786px) {
      figure {
        max-width: 100%;
      }
    }

    img {
      max-width: 100%;
      height: 100%;
    }
  }
</style>

<BaseLayout pageTitle={frontmatter.title}>
  <div class="blog-post">
    <h1>{frontmatter.title}</h1>
    <slot />
  </div>
</BaseLayout>
