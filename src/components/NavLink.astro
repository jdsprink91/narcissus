---
interface Props {
  href: string;
  ariaLabel?: string;
}

const { href, ariaLabel } = Astro.props;
---

<style>
  a {
    text-transform: uppercase;
    text-decoration: none;
    font-size: clamp(1rem, 3vw, 2rem);
    font-weight: 900;
    letter-spacing: 0.125rem;
    color: black;
  }
</style>

<a href={href} aria-label={ariaLabel}><slot /></a>
