---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  src: ImageMetadata;
  alt: string;
}

const { src, alt } = Astro.props;
---

<style>
  .narc-image {
    max-width: min(100%, 450px);
    height: 100%;
  }
</style>

<Image
  class={"narc-image"}
  src={src}
  alt={alt}
  widths={[375, src.width]}
  sizes={`(max-width: 786px) 375px, ${src.width}px`}
/>
